{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "dist",
		"lib": [
			"ES2020","WebWorker"
		],
		"sourceMap": true,
		"rootDir": "src",
		"esModuleInterop": true,
		"strict": true,   /* enable all strict type-checking options */
		"noImplicitReturns": true, 
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true, 
	},
	"exclude": [
		"src/UX/**/*",
		"src/worldux/**/*",
		"src/monaco/**/*",
		"src/babylon/**/*",
		"src/dataform/**/*",
		"src/local/**/*",
		"src/cli/**/*",
		"out/**/*",		
		"src/index.tsx",
		"src/vscode/webextension.ts",
		"node_modules_archive/**/*",
		"node_modules/node-fetch/**/*",
		"src/vscwebindex.tsx",
		"src/jsnwebindex.tsx",
		"src/index.ts",
		"src/storage/BrowserFile.ts",
		"src/storage/BrowserFolder.ts",
		"src/storage/BrowserStorage.ts",
	],
}
